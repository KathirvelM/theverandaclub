<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:clipChildren="false"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:elevation="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin_negative"
        android:layout_marginRight="@dimen/activity_horizontal_margin_negative"
        android:padding="10dp"
        android:background="#EDEDED"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="5dp"
            style="@style/tvHeadSub"
            tools:text="Sample"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/user"
            android:id="@+id/tvAuthor"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/tv"
            tools:text="Sample"
            android:layout_gravity="center_vertical"
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvTitle"
        style="@style/tvDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginRight="@dimen/activity_horizontal_margin_negative"
        android:theme="@style/_AppTheme"
        style="@style/tvHeadSub"
        android:paddingLeft="15dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@drawable/bg_article_category"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="5dp"
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <WebView
        android:nestedScrollingEnabled="true"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</FrameLayout>

    <LinearLayout
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llPrevious"
            android:padding="5dp"
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="5dp"
                android:background="@color/colorChip"
                style="@style/tvHeadSub"
                android:text="Previous Article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:id="@+id/tvPrevious"
                style="@style/tvLiHeadSub"
                android:layout_height="wrap_content"
                android:text="Jio 5G explained: What does the solution mean to Reliance, and its users?" />

        </LinearLayout>

        <View
            android:background="@color/divider"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:id="@+id/llNext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:padding="5dp"
                android:background="@color/colorChip"
                style="@style/tvHeadSub"
                android:orientation="vertical"
                android:text="Next Article"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:padding="5dp"
                android:layout_width="match_parent"
                android:id="@+id/tvNext"
                style="@style/tvLiHeadSub"
                android:layout_height="wrap_content"
                android:text="Jio 5G explained: What does the solution mean to Reliance, and its users?" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvRelated"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/tvHead"
        android:text="Related Articles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>