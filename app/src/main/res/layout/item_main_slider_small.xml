<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginLeft="@dimen/itemHorizontalMargin"
    android:layout_marginTop="@dimen/itemVerticalMargin"
    android:layout_marginRight="@dimen/itemHorizontalMargin"
    android:layout_marginBottom="@dimen/itemVerticalMargin">

    <com.github.florent37.shapeofview.shapes.RoundRectView
        android:id="@+id/rc"
        style="@style/rc"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="0.8"
        android:layout_height="0dp">

        <ImageView
            android:src="@drawable/image_main_slider_2"
            android:id="@+id/ivThumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:background="@drawable/screen_gradient"
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:paddingBottom="@dimen/itemVerticalPadding"
            android:paddingRight="@dimen/itemHorizontalPadding"
            android:paddingLeft="@dimen/itemHorizontalPadding"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/white"
                android:gravity="bottom"
                android:text="Jio 5G explained: What does the solution mean to Reliance, and its users?"
                style="@style/tvLiHeadSub"
                app:layout_constraintTop_toBottomOf="@id/rc"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/tv"
                android:layout_width="match_parent"
                android:minLines="3"
                android:maxLines="3"
                android:layout_height="wrap_content"/>

            <TextView
                tools:text="Sample Name"
                style="@style/tvLiCategory"
                android:background="@drawable/bg_li_category"
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>



    </com.github.florent37.shapeofview.shapes.RoundRectView>


</androidx.constraintlayout.widget.ConstraintLayout>

